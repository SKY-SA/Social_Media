<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recycler_row_user_email"
    android:text="User Email"
    android:textSize="20sp"
    android:layout_margin="5dp"
    android:padding="3dp"
    android:background="#28F3AFAF"
    android:textColor="@color/design_default_color_primary"
    ></TextView>

    <ImageView
        android:id="@+id/recycler_row_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_marginBottom="2dp"
        app:srcCompat="@drawable/ic_launcher_background"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_row_user_comment"
        android:text="User Comment"
        android:textSize="18sp"
        android:textColor="#4582B6"
        android:layout_margin="4dp"
        android:padding="6dp"
        android:background="#23A1A0A0"
        ></TextView>

</LinearLayout>